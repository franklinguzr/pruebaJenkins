pipeline {
  agent any

  tools {
    jdk "java"
  }

  stages{
    stage('clone - validate') {
      steps {
        git branch: 'master', url: 'https://github.com/franklinguzr/pruebaJenkins.git'
        dir('/') {
          sh 'mvn validate'
        }
      }
    }

    stage('compile') {
      steps {
        dir('/') {
          sh 'mvn compile'
        }
      }
    }

    stage('test') {
      steps {
        dir('/') {
          sh 'mvn test'
        }
      }
    }

    stage('package') {
      steps {
        dir('/') {
          sh 'mvn package'
        }
      }
    }

    stage('verify') {
      steps {
        dir('/') {
          sh 'mvn verify'
        }
      }
    }


    stage('install') {
      steps {
        dir('/') {
          sh 'mvn install'
        }
      }
    }
    stage('deploy') {
      steps {
        sh 'mvn deploy'
      }
    }
  }  

}
